<style>
	button,input {
		background: none;
		padding: 0;
		box-shadow: none;
		border: none;
		outline: none !important;
		font-family: "Outfit";
		color: white;
	}

	button {
		display: inline-flex;
		transition: ease-in-out 0.25s;
	}

	button:hover {
		transform: translateY(-5px);
		filter: drop-shadow(0px 7px 10px rgba(255,255,255,0.2));
	}

	input {
		min-width: 250px;
		font-size: 1em;
	}

	.email {
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		border: 2px solid white;
		border-radius: 5px;
		padding-left: 1rem;
		background: rgba(255,255,255,0.2);
	}

	h1 {
		font-size: 2rem;
		max-width: 600px;
	}

	.email-box {
		display: flex;
		gap: 1rem;
		flex-direction: column;
	}

	footer {
		margin-top: 5rem;
	}

	a {
		color: white;
	}

</style>